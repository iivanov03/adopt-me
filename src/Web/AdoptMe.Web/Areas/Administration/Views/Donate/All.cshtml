@{
    this.ViewData["Title"] = "Donate organisations";
}

@using AdoptMe.Web.ViewModels.Administration.Donate
@model List<OrganisationListModel>
<!-- Breadcrumbs & Page title-->
<div class="page-title">
    <div class="page-title-text">Всички организации</div>
    <ul class="breadcrumbs-custom">
        <li><a href="index.html">Начало</a></li>
        <li class="active">Организации</li>
    </ul>
</div>
<section class="section-md section-md-alternate bg-white text-center">
    <div class="shell">
        <div class="group-xl group-middle">
            <h2 class="text-center">Организации</h2>
        </div>
    </div>
    <div class="group-xl group-middle">
        <div class="cell-xs-10 cell-sm-6 cell-md-8">
            <a class="btn btn-blue-marguerite btn-effect-anis wow fadeInUpSmall" asp-area="Administration" asp-controller="Donate" asp-action="Create" data-wow-delay="0.2s" data-wow-duration=".75s" style="margin-bottom:25px">Добави организация</a>
        </div>
    </div>
    <div class="shell">
        <div class="table-custom-responsive">
            <table class="table-custom table-custom-primary table-custom-striped">
                <thead>
                    <tr>
                        <th>Име</th>
                        <th>Добавено от</th>
                        <th>Промени</th>
                        <th>Изтрий</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var organisation in Model)
                    {
                        <tr>
                            <td>@organisation.Organisation</td>
                            <td>@organisation.Creator</td>
                            <td><a asp-area="Administration" asp-controller="Donate" asp-action="Edit" asp-route-id=@organisation.Id>Edit</a></td>
                            <td><a asp-area="Administration" asp-controller="Donate" asp-action="Delete" asp-route-id=@organisation.Id>Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>





