@{
    this.ViewData["Title"] = "Adopt a Pet";
}
<!-- Breadcrumbs & Page title-->
<div class="page-title">
    <div class="page-title-text"><span data-content-to="#adopt-cats">Осинови Котка</span><span data-content-to="#adopt-dogs">Осинови Куче</span><span data-content-to="#adopt-other">Осинови Друго</span></div>
    <ul class="breadcrumbs-custom">
        <li><a href="index.html">Начало</a></li>
        <li><a href="adopt-a-pet.html">Осинови животно</a></li>
        <li class="active"><span data-content-to="#adopt-cats">Осинови Котка</span><span data-content-to="#adopt-dogs">Осинови Куче</span><span data-content-to="#adopt-other">Осинови Друго</span></li>
    </ul>
</div>

<div class="shell">
    <div class="box-form box-form-1">
        <partial name="_SearchForm" />
    </div>
</div>

<!-- Adopt pets-->
<section class="section-md bg-white text-center">
    <div class="shell">
        <div class="group-xl group-middle">
            <div class="btn btn-circle btn-silver-outline btn-shadow active" id="dateOrder">Подреди по дата</div>
            <div class="btn btn-circle btn-silver-outline btn-shadow" id="likeOrder">подреди по лайкове</div>
            <div class="btn btn-icon btn-icon-left btn-silver-outline btn-shadow" id="ascOrder"><span class="icon icon-md material-icons-swap_vert"></span>Възходящ ред</div>
        </div>
    </div>
    <div class="shell">
        <!-- Bootstrap tabs-->
        <div class="tabs tabs-custom tabs-vertical tabs-corporate tabs-wide" id="tabs-1" data-url-tabs="true">
            <!-- Nav tabs-->
            <ul class="nav nav-tabs">
                <li onclick="loadAnimals(1, 'Котка')" class="active"><a href="#adopt-cats" data-toggle="tab">Осинови котка</a></li>
                <li onclick="loadAnimals(1, 'Куче')"><a href="#adopt-dogs" data-toggle="tab">Осинови куче</a></li>
                <li onclick="loadAnimals(1, 'Други')"><a href="#adopt-other" data-toggle="tab">Осинови друго</a></li>
            </ul>
            <div class="tab-content">
                <!-- Tab 1-->
                <div class="tab-pane fade in active" id="adopt-cats">
                </div>
                <!-- Tab 2-->
                <div class="tab-pane fade" id="adopt-dogs">
                </div>
                <!-- Tab 3-->
                <div class="tab-pane fade" id="adopt-other">
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/js/pagesManipulation/adoptList.js"></script>
    <script src="~/js/pagesManipulation/listPostCreatorVertical.js"></script>
}
