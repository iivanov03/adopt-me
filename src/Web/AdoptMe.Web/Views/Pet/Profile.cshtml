@using AdoptMe.Common
@using AdoptMe.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model AdoptMe.Web.ViewModels.Pet.PetProfileViewModel
@{
    this.ViewData["Title"] = "Pet Profile";
}

<!-- Breadcrumbs & Page title-->
<div class="page-title">
    <div class="page-title-text">Single Page Pets</div>
    <ul class="breadcrumbs-custom">
        <li><a href="index.html">Home</a></li>
        <li><a href="#">Adopt a Pet</a></li>
        <li class="active">Pet Profile</li>
    </ul>
</div>

<!-- News & Events-->
<section class="section-md section-md-alternate bg-white text-center">
    <div class="shell">
        <h3>Pet Profile</h3>
        <ul class="post-meta">
            <li>
                <span class="icon icon-xs icon-tan-hide material-icons-access_time"></span>
                <time datetime="">@Model.CreatedOn</time>
            </li>
            <li><span class="icon icon-xs icon-tan-hide mdi mdi-thumb-up"></span><span id="likesCount">@Model.Likes</span></li>
            <li><span class="icon icon-xs icon-tan-hide mdi mdi-comment-outline"></span><span>6</span></li>
        </ul>
        @if (Model.IsPostLiked)
        {
            <div onclick="LikeController(@Model.PostId,true)" class="btn btn-icon btn-icon-right btn-primary" id="like"><span class="icon icon-md material-icons-thumb_down"></span>Dislike</div>
        }
        else
        {
            <div onclick="LikeController(@Model.PostId,false)" class="btn btn-icon btn-icon-right btn-primary" id="like"><span class="icon icon-md material-icons-favorite"></span>Like</div>
        }
        <div class="range range-sm-center">
            <div class="cell-sm-9 cell-md-12">
                <article class="post-single">
                    <div class="post-single-left">
                        <img class="mr-3 img-responsive" src="@Model.CoverPicturePath" alt="" width="570" height="389" />
                        <section class="section-md bg-gray-light text-center" style="padding:15px;">
                            <div class="shell">
                                <div class="range">
                                    <div class="cell-xs-12 wow fadeIn" data-wow-duration=".8s" data-wow-offset="150">
                                        <!-- Owl Carousel-->
                                        <div class="owl-carousel-centered">
                                            <div data-photo-swipe-gallery="gallery" class="owl-carousel" style="padding:10px;" data-items="1" data-sm-items="3" data-stage-padding="0" data-loop="true" data-margin="10" data-lg-margin="30" data-mouse-drag="false" data-center="true" data-numbering="#owl-numbering-1" data-nav="true">
                                                @foreach (var picture in Model.Pictures)
                                                {
                                                    <a class="mr-3 img-responsive" href=@picture.Path data-photo-swipe-item="" data-size=@picture.DataSize>
                                                        <figure>
                                                            <img class="mr-3 img-responsive" src=@picture.Path alt="" width="346" height="249" />
                                                        </figure>
                                                    </a>
                                                }
                                            </div>
                                            <div class="owl-numbering owl-numbering-default" style="margin-top: 0px;" id="owl-numbering-1">
                                                <div class="numbering-current"></div>
                                                <div class="numbering-separator"></div>
                                                <div class="numbering-count"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="post-single-body">
                        <p class="post-single-title">Description</p>
                        <p>@Model.Description</p>

                    </div>
                </article>
            </div>
        </div>
    </div>
</section>

<div class="shell">
    <hr>
</div>

<!-- Comments-->
<section class="section-sm bg-white text-left">
    <div class="shell">
        <div class="range spacing-55">

            <div class="cell-md-7 cell-lg-8">
                <div class="blog-main">
                    @if (this.SignInManager.IsSignedIn(this.User))
                    {
                        <div class="blog-main-item">
                            <h4>Comments</h4>
                            <div class="comment-group">

                                <!-- Comment-->
                                <article class="comment">
                                    <div class="comment-avatar">
                                        <img src="images/theresa-lane-80x80.jpg" alt="" width="80" height="80" />
                                    </div>
                                    <div class="comment-body">
                                        <div class="comment-header">
                                            <p class="comment-title">Theresa Lane</p><span class="comment-time">2 days ago</span>
                                        </div>
                                        <div class="comment-text">
                                            <p>Thank you for your article, I think it can be very useful to volunteers of Animal Shelter.</p>
                                        </div>
                                        <div class="comment-footer"><a class="comment-link-reply" href="#">Reply</a></div>
                                    </div>
                                </article>
                                <div class="comment-group">
                                    <!-- Comment-->
                                    <article class="comment">
                                        <div class="comment-avatar">
                                            <img src="images/ronald-austin-80x80.jpg" alt="" width="80" height="80" />
                                        </div>
                                        <div class="comment-body">
                                            <div class="comment-header">
                                                <p class="comment-title">Ronald Austin</p><span class="comment-time">2 days ago</span>
                                            </div>
                                            <div class="comment-text">
                                                <p>Thank you!</p>
                                            </div>
                                            <div class="comment-footer"><a class="comment-link-reply" href="#">Reply</a></div>
                                        </div>
                                    </article>
                                </div>
                            </div>
                        </div>
                        <div class="blog-main-item">
                            <h4>Send a Comment</h4>
                            <!-- RD Mailform-->
                            <form class="rd-mailform form-wide" data-form-output="form-output-global" data-form-type="contact" method="post" action="bat/rd-mailform.php">
                                <div class="range range-sm-bottom spacing-30">
                                    <div class="cell-xs-12">
                                        <div class="form-group">
                                            <textarea class="form-control" id="comment-message" name="message" data-constraints="@@Required"></textarea>
                                            <label class="form-label" for="comment-message">Message</label>
                                        </div>
                                    </div>
                                    <div class="cell-sm-6">
                                        <button class="btn btn-primary btn-effect-ujarak btn-block" type="submit">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    }
                    else
                    {
                        <h3>Sign in to add comments</h3>
                    }
                </div>
            </div>
            <div class="cell-md-5 cell-lg-4">
                <div class="range range-xs-center spacing-30">
                    <div class="cell-xs-10 cell-sm-6 cell-md-12">
                        <ul class="list-md">
                            <li>
                                <article class="post-preview">
                                    <div class="unit unit-spacing-xs unit-horizontal unit-middle">
                                        <div class="unit-left">
                                            <img class="post-preview-image" src="images/news-1-103x60.jpg" alt="" width="103" height="60" />
                                        </div>
                                        <div class="unit-body">
                                            <p class="post-preview-title"><a href="#">Wellness Care Plans for Your Pets and Their Benefitsli</a></p>
                                        </div>
                                    </div>
                                </article>
                            </li>
                            <li>
                                <article class="post-preview">
                                    <div class="unit unit-spacing-xs unit-horizontal unit-middle">
                                        <div class="unit-left">
                                            <img class="post-preview-image" src="images/news-2-103x60.jpg" alt="" width="103" height="60" />
                                        </div>
                                        <div class="unit-body">
                                            <p class="post-preview-title"><a href="#">Top 5 Most Affectionate Cats for You and Your Family</a></p>
                                        </div>
                                    </div>
                                </article>
                            </li>
                            <li>
                                <article class="post-preview">
                                    <div class="unit unit-spacing-xs unit-horizontal unit-middle">
                                        <div class="unit-left">
                                            <img class="post-preview-image" src="images/news-3-103x60.jpg" alt="" width="103" height="60" />
                                        </div>
                                        <div class="unit-body">
                                            <p class="post-preview-title"><a href="#">How Cats Can Improve Your Human Relationships</a></p>
                                        </div>
                                    </div>
                                </article>
                            </li>
                        </ul>
                    </div>
                    <div class="cell-xs-10 cell-sm-6 cell-md-12"><a class="banner" href="#"><img src="images/banner 370x518.jpg" alt="" width="370" height="518" /></a></div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/js/petProfile.js"></script>




