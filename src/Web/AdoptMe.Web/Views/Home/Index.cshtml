<!-- From & pets-->
<section class="section-md-bottom bg-gray-light">
    <div class="shell">
        <div class="box-form box-form-1">
            <!-- RD Mailform-->
            <form class="rd-mailform form-style-classic">
                <div class="range range-xs-center range-sm-bottom spacing-30">
                    <div class="cell-xs-10 cell-sm-6 cell-md-4">
                        <div class="form-group">
                            <label class="form-label-outside" for="form-location">Град</label>
                            <!--Select 2-->
                            <select class="form-control select-filter" id="form-location" data-placeholder="Any location" data-minimum-results-for-search="Infinity" data-constraints="@@Required" name="location">
                                <option value="1">Навсякъде</option>
                            </select>
                        </div>
                    </div>
                    <div class="cell-xs-10 cell-sm-6 cell-md-4">
                        <div class="form-group">
                            <label class="form-label-outside" for="form-animal-type">Тип</label>
                            <!--Select 2-->
                            <select class="form-control select-filter" id="form-animal-type" data-placeholder="All" data-minimum-results-for-search="Infinity" data-constraints="@@Required" name="animal-type">
                                <option value="1">Всички</option>
                                <option value="2">Котка</option>
                                <option value="3">Куче</option>
                                <option value="4">Друго</option>
                            </select>
                        </div>
                    </div>
                    <div class="cell-xs-10 cell-sm-6 cell-md-4">
                        <div class="form-group">
                            <label class="form-label-outside" for="form-sex">Пол</label>
                            <!--Select 2-->
                            <select class="form-control select-filter" id="form-sex" data-placeholder="All" data-minimum-results-for-search="Infinity" data-constraints="@@Required" name="sex">
                                <option value="1">Всички</option>
                                <option value="2">Женско</option>
                                <option value="3">Мъжко</option>
                            </select>
                        </div>
                    </div>
                    <div class="cell-xs-10 cell-sm-6 cell-md-4">
                        <div class="form-group">
                            <button class="btn btn-block btn-primary btn-effect-anis" type="submit">Намери</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="shell">
        <div class="range spacing-30">
            <div class="cell-sm-6">
                <!-- Thumbnail modern-->
                <div class="thumbnail-modern">
                    <img class="thumbnail-modern-image" src="images/home1-1-567x381.jpg" alt="" width="567" height="381" />
                    <div class="thumbnail-modern-caption">
                        <div class="thumbnail-modern-caption-body">
                            <div class="thumbnail-modern-title-left">Кучета</div>
                            <div class="thumbnail-modern-title-right">
                                @if (Model.DogsCount > 0)
                                {
                                    <span>Повече от</span>
                                    <div><span class="number">@Model.DogsCount</span><span>кучета</span></div>
                                }
                                else
                                {
                                    <span>Няма животни</span>
                                }
                            </div>
                        </div>
                        <div class="thumbnail-modern-caption-aside"><a class="thumbnail-modern-control" href="adopt-a-pet.html#adopt-dogs">повече</a></div>
                    </div>
                </div>
            </div>
            <div class="cell-sm-6">
                <!-- Thumbnail modern-->
                <div class="thumbnail-modern">
                    <img class="thumbnail-modern-image" src="images/home1-2-567x381.jpg" alt="" width="567" height="381" />
                    <div class="thumbnail-modern-caption">
                        <div class="thumbnail-modern-caption-body">
                            <div class="thumbnail-modern-title-left">Котки</div>
                            <div class="thumbnail-modern-title-right">
                                @if (Model.CatCount > 0)
                                {
                                    <span>Повече от</span>
                                    <div><span class="number">@Model.CatCount</span><span>котки</span></div>
                                }
                                else
                                {
                                    <span>Няма животни</span>
                                }
                            </div>
                        </div>
                        <div class="thumbnail-modern-caption-aside"><a class="thumbnail-modern-control" href="adopt-a-pet.html#adopt-cats">повече</a></div>
                    </div>
                </div>
            </div>
            <div class="cell-sm-6">
                <!-- Thumbnail modern-->
                <div class="thumbnail-modern">
                    <img class="thumbnail-modern-image" src="images/home1-4-567x381.jpg" alt="" width="567" height="381" />
                    <div class="thumbnail-modern-caption">
                        <div class="thumbnail-modern-caption-body">
                            <div class="thumbnail-modern-title-left">Други</div>
                            <div class="thumbnail-modern-title-right">
                                @if (Model.OtherAnimalsCount > 0)
                                {
                                    <span>Повече от</span>
                                    <div><span class="number">@Model.OtherAnimalsCount</span><span>други</span></div>
                                }
                                else
                                {
                                    <span>Няма животни</span>
                                }
                            </div>
                        </div>
                        <div class="thumbnail-modern-caption-aside"><a class="thumbnail-modern-control" href="adopt-a-pet.html#adopt-small-pets">повече</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="shell text-center">
        @if (Model.AllAnimals > 0)
        {
            <article class="box-text">
                <h1>повече от @Model.AllAnimals</h1>
                <div class="group-lg group-middle">
                    <h3 class="displacement-1">животни</h3><a class="btn btn-blue-marguerite btn-effect-anis" href="adopt-a-pet.html">виж всички</a>
                </div>
            </article>
        }
    </div>
</section>

