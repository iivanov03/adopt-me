@{
    this.Layout = "_LayoutMainPage";
}
@{
    this.ViewData["Title"] = "Home Page";
}
@model AdoptMe.Web.ViewModels.Home.IndexViewModel
<!-- Swiper-->
<section>
    <div class="swiper-bg-wrap swiper-style-1 bg-gray-dark">
        <div class="swiper-container swiper-slider swiper-bg swiper-height-1" data-autoplay="3500" data-slide-effect="fade">
            <div class="swiper-wrapper">
                <div class="swiper-slide" data-slide-bg="images/slider-1-slide-1-1920x850.jpg"></div>
                <div class="swiper-slide" data-slide-bg="images/slider-1-slide-2-1920x850.jpg"></div>
                <div class="swiper-slide" data-slide-bg="images/slider-1-slide-3-1920x850.jpg"></div>
            </div>
            <!-- Swiper Navigation-->
            <div class="swiper-button-prev"><span>Prev</span></div>
            <div class="swiper-button-next"><span>Next</span></div>
            <!-- Swiper pagination-->
            <div class="swiper-pagination"></div>
        </div>
        <div class="swiper-bg-content">
            <div class="jumbotron-custom jumbotron-custom-variant-1 context-dark">
                <div class="shell">
                    <div class="jumbotron-custom-inner">
                        <div class="complex-text wow fadeInUpSmall" data-wow-duration=".75s">
                            <p class="h1 complex-text-main">Спаси</p>
                            <div class="complex-text-aside">
                                <p class="h4 mark mark-alternate">малък</p>
                                <p class="h2">живот</p>
                            </div>
                        </div>
                        <p class="h3-alternate wow fadeInUpSmall" data-wow-delay=".1s" data-wow-duration=".75s">Направи дарение</p><a class="btn btn-blue-marguerite btn-effect-anis wow fadeInUpSmall" href="adopt-a-pet.html" data-wow-delay="0.2s" data-wow-duration=".75s">Дари</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- From & pets-->
<section class="section-md-bottom bg-gray-light">
    <div class="shell">
        <div class="box-form box-form-1">
            <!-- RD Mailform-->
            <form class="rd-mailform form-style-classic">
                <div class="range range-xs-center range-sm-bottom spacing-30">
                    <div class="cell-xs-10 cell-sm-6 cell-md-4">
                        <div class="form-group">
                            <label class="form-label-outside" for="form-location">Град</label>
                            <!--Select 2-->
                            <select class="form-control select-filter" id="form-location" data-placeholder="Any location" data-minimum-results-for-search="Infinity" data-constraints="@@Required" name="location">
                                <option value="1">Навсякъде</option>
                            </select>
                        </div>
                    </div>
                    <div class="cell-xs-10 cell-sm-6 cell-md-4">
                        <div class="form-group">
                            <label class="form-label-outside" for="form-animal-type">Тип</label>
                            <!--Select 2-->
                            <select class="form-control select-filter" id="form-animal-type" data-placeholder="All" data-minimum-results-for-search="Infinity" data-constraints="@@Required" name="animal-type">
                                <option value="1">Всички</option>
                                <option value="2">Котка</option>
                                <option value="3">Куче</option>
                                <option value="4">Друго</option>
                            </select>
                        </div>
                    </div>
                    <div class="cell-xs-10 cell-sm-6 cell-md-4">
                        <div class="form-group">
                            <label class="form-label-outside" for="form-sex">Пол</label>
                            <!--Select 2-->
                            <select class="form-control select-filter" id="form-sex" data-placeholder="All" data-minimum-results-for-search="Infinity" data-constraints="@@Required" name="sex">
                                <option value="1">Всички</option>
                                <option value="2">Женско</option>
                                <option value="3">Мъжко</option>
                            </select>
                        </div>
                    </div>
                    <div class="cell-xs-10 cell-sm-6 cell-md-4">
                        <div class="form-group">
                            <button class="btn btn-block btn-primary btn-effect-anis" type="submit">Намери</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Create Adoption Post and Create lost/found post-->
    <section class="section-md bg-white text-center">
        <div class="shell">
            <div class="group-xl group-middle">
                <div class="cell-xs-10 cell-sm-6 cell-md-8">
                    <div class="form-group">
                        <a class="btn btn-blue-marguerite btn-effect-anis wow fadeInUpSmall" asp-area="" asp-controller="Adopt" asp-action="Index" data-wow-delay="0.2s" data-wow-duration=".75s">Добави животно за осиновяване</a>
                    </div>
                </div>
                <div class="cell-xs-10 cell-sm-6 cell-md-8">
                    <div class="form-group">
                        <a class="btn btn-blue-marguerite btn-effect-anis wow fadeInUpSmall" asp-area="" asp-controller="Adopt" asp-action="Index" data-wow-delay="0.2s" data-wow-duration=".75s">Добави намерен/изгубен домашен любимец</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="shell">
        <div class="range spacing-30">
            <div class="cell-sm-6">
                <!-- Thumbnail modern-->
                <div class="thumbnail-modern">
                    <img class="thumbnail-modern-image" src="images/home1-1-567x381.jpg" alt="" width="567" height="381" />
                    <div class="thumbnail-modern-caption">
                        <div class="thumbnail-modern-caption-body">
                            <div class="thumbnail-modern-title-left">Кучета</div>
                            <div class="thumbnail-modern-title-right">
                                @if (Model.DogsCount > 0)
                                {
                                    <span>Повече от</span>
                                    <div><span class="number">@Model.DogsCount</span><span>кучета</span></div>
                                }
                                else
                                {
                                    <span>Няма животни</span>
                                }
                            </div>
                        </div>
                        <div class="thumbnail-modern-caption-aside"><a class="thumbnail-modern-control" href="adopt-a-pet.html#adopt-dogs">повече</a></div>
                    </div>
                </div>
            </div>
            <div class="cell-sm-6">
                <!-- Thumbnail modern-->
                <div class="thumbnail-modern">
                    <img class="thumbnail-modern-image" src="images/home1-2-567x381.jpg" alt="" width="567" height="381" />
                    <div class="thumbnail-modern-caption">
                        <div class="thumbnail-modern-caption-body">
                            <div class="thumbnail-modern-title-left">Котки</div>
                            <div class="thumbnail-modern-title-right">
                                @if (Model.CatCount > 0)
                                {
                                    <span>Повече от</span>
                                    <div><span class="number">@Model.CatCount</span><span>котки</span></div>
                                }
                                else
                                {
                                    <span>Няма животни</span>
                                }
                            </div>
                        </div>
                        <div class="thumbnail-modern-caption-aside"><a class="thumbnail-modern-control" href="adopt-a-pet.html#adopt-cats">повече</a></div>
                    </div>
                </div>
            </div>
            <div class="cell-sm-6">
                <!-- Thumbnail modern-->
                <div class="thumbnail-modern">
                    <img class="thumbnail-modern-image" src="images/home1-4-567x381.jpg" alt="" width="567" height="381" />
                    <div class="thumbnail-modern-caption">
                        <div class="thumbnail-modern-caption-body">
                            <div class="thumbnail-modern-title-left">Други</div>
                            <div class="thumbnail-modern-title-right">
                                @if (Model.OtherAnimalsCount > 0)
                                {
                                    <span>Повече от</span>
                                    <div><span class="number">@Model.OtherAnimalsCount</span><span>други</span></div>
                                }
                                else
                                {
                                    <span>Няма животни</span>
                                }
                            </div>
                        </div>
                        <div class="thumbnail-modern-caption-aside"><a class="thumbnail-modern-control" href="adopt-a-pet.html#adopt-small-pets">повече</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="shell text-center">
        @if (Model.AllAnimals > 0)
        {
            <article class="box-text">
                <h1>повече от @Model.AllAnimals</h1>
                <div class="group-lg group-middle">
                    <h3 class="displacement-1">животни</h3><a class="btn btn-blue-marguerite btn-effect-anis" href="adopt-a-pet.html">виж всички</a>
                </div>
            </article>
        }
    </div>
</section>

<!-- SUCCESS STORIES-->
<section class="section-md bg-gray-light text-center">
    <div class="shell">
        <div class="range spacing-30">
            <div class="cell-xs-12">
                <h2>история с щастлив край</h2>
                <p class="large"><a class="btn btn-blue-marguerite btn-effect-anis wow fadeInUpSmall" href="adopt-a-pet.html" data-wow-delay="0.2s" data-wow-duration=".75s">Сподели</a>снимка и кажи какво значи твоят домашен любимец за теб</p>
            </div>
            <div class="cell-xs-12">
                <div class="range range-sm-center spacing-30">
                    @if (Model.HappyStories.Any())
                    {
                        foreach (var story in Model.HappyStories)
                        {
                            <div class="cell-sm-10 cell-md-6 height-fill">
                                <!-- Quote boxed-->
                                <blockquote class="quote-boxed">
                                    <div class="quote-boxed-left">
                                        <img class="quote-boxed-image" src="images/home1-6-280x320.jpg" alt="" width="280" height="320" />
                                    </div>
                                    <div class="quote-boxed-body">
                                        <cite>@story.PersonName</cite>
                                        <p class="caption">and @story.PetName</p>
                                        <p class="quote-text">
                                            <q>@story.Description</q>
                                        </p>
                                        <div class="quote-boxed-meta">
                                            <ul class="quote-boxed-meta-list">
                                                <li class="object-inline"><span class="icon icon-sm icon-primary-filled icon-circle mdi mdi-thumb-up-outline"></span><span>10</span></li>
                                                <li><span>@story.CreatedOn</span></li>
                                            </ul>
                                        </div>
                                    </div>
                                </blockquote>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="shell text-center">
                            <article class="box-text">
                                <h1>Няма истории</h1>
                            </article>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<section class="bg-primary oh">
    <div class="shell">
        <div class="range range-custom-bordered-small">
            <div class="cell-xs-6 cell-sm-4 cell-md-3 cell-bordered">
                <div class="counter-box-bold">
                    <div class="counter" data-from="0" data-to="@Model.AllAnimals">@Model.AllAnimals</div>
                    <p class="counter-box-header">Търсещи дом</p>
                </div>
            </div>
            <div class="cell-xs-6 cell-sm-4 cell-md-3 cell-bordered">
                <div class="counter-box-bold">
                    <div class="counter" data-from="0" data-to="@Model.AdoptedAnimals" data-formatter="false">@Model.AdoptedAnimals</div>
                    <p class="counter-box-header">Осиновени животни</p>
                </div>
            </div>
            <div class="cell-xs-6 cell-sm-4 cell-md-3 cell-bordered">
                <div class="counter-box-bold">
                    <div class="counter" data-from="0" data-to="@Model.Volunteers">@Model.Volunteers</div>
                    <p class="counter-box-header">Доброволци</p>
                </div>
            </div>
            <div class="cell-xs-6 cell-sm-12 cell-md-3 height-fill">
                <div class="col-decoration-skew">
                    <div class="col-decoration-skew-inner">
                        <h2>Не бъди</h2>
                        <h5>безразличен</h5><a class="btn btn-trout-inverse btn-effect-anis btn-offset-medium" href="make-a-gift-online.html">дари сега</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

