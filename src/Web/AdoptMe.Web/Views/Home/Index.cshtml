<!-- SUCCESS STORIES-->
<section class="section-md bg-gray-light text-center">
    <div class="shell">
        <div class="range spacing-30">
            <div class="cell-xs-12">
                <h2>история с щастлив край</h2>
                <p class="large"><a class="btn btn-blue-marguerite btn-effect-anis wow fadeInUpSmall" href="adopt-a-pet.html" data-wow-delay="0.2s" data-wow-duration=".75s">Сподели</a>снимка и кажи какво значи твоят домашен любимец за теб</p>
            </div>
            <div class="cell-xs-12">
                <div class="range range-sm-center spacing-30">
                    @if (Model.HappyStories.Any())
                    {
                        foreach (var story in Model.HappyStories)
                        {
                            <div class="cell-sm-10 cell-md-6 height-fill">
                                <!-- Quote boxed-->
                                <blockquote class="quote-boxed">
                                    <div class="quote-boxed-left">
                                        <img class="quote-boxed-image" src="images/home1-6-280x320.jpg" alt="" width="280" height="320" />
                                    </div>
                                    <div class="quote-boxed-body">
                                        <cite>@story.PersonName</cite>
                                        <p class="caption">and @story.PetName</p>
                                        <p class="quote-text">
                                            <q>@story.Description</q>
                                        </p>
                                        <div class="quote-boxed-meta">
                                            <ul class="quote-boxed-meta-list">
                                                <li class="object-inline"><span class="icon icon-sm icon-primary-filled icon-circle mdi mdi-thumb-up-outline"></span><span>10</span></li>
                                                <li><span>@story.CreatedOn</span></li>
                                            </ul>
                                        </div>
                                    </div>
                                </blockquote>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="shell text-center">
                            <article class="box-text">
                                <h1>Няма истории</h1>
                            </article>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

